<!-- 

    This is the Admin Page for admin functionalities

 -->
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- This includes the partials which are different links and sources -->
    <%- include('../partials/head') %>
    <!-- This is only in the admin, a custom api to display list of  -->
    <script src="/js/teacherAPI.js"></script>
    <script src="/js/schoolYearAPI.js"></script>
    <script src="/js/alertAPI.js"></script>
    <script src="/js/gradeAPI.js"></script>
    <title>Admin  Page</title>
</head>
<body>
    <div class="admin-panel mx-auto mt-5">
        <a href="/" class="btn btn-secondary my-2">Go Back</a>
        <div class="text-center">
            <h4>Current School Year</h4>
            <h5 id="syLink" class="text-link mx-auto" onclick="showModal('syLink', true)" data-id="<%= sy ? sy.id : 0 %>">
                <% if (sy) { %>
                    <%= sy.title %>
                <% } else { %>
                    No School Year
                <% } %>
            </h5>
        </div>
        <% if (hasCurrent) { %>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="teacher-tab" data-toggle="tab" data-target="#teacher" type="button" role="tab" aria-controls="teacher" aria-selected="false">Manage Teachers</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="class-tab" data-toggle="tab" data-target="#class" type="button" role="tab" aria-controls="class" aria-selected="false">Manage Class</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="type-tab" data-toggle="tab" data-target="#type" type="button" role="tab" aria-controls="type" aria-selected="false">Manage Type</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="student-tab" data-toggle="tab" data-target="#studentTab" type="button" role="tab" aria-controls="studentTab" aria-selected="false">Manage Students</button>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="teacher" role="tabpanel" aria-labelledby="teacher-tab">
                    <!-- This includes the partials in different file -->
                    <%- include('../partials/manageTeachers.ejs') %>
                </div>
                <div class="tab-pane fade" id="class" role="tabpanel" aria-labelledby="class-tab">
                    <!-- This includes the partials in different file -->
                    <%- include('../partials/manageClass.ejs') %>
                </div>
                <div class="tab-pane fade" id="type" role="tabpanel" aria-labelledby="type-tab">
                    <!-- This includes the partials in different file -->
                    <%- include('../partials/manageTypes.ejs') %>
                </div>
                <div class="tab-pane fade" id="studentTab" role="tabpanel" aria-labelledby="student-tab">
                    <!-- This includes the partials in different file -->
                    <%- include('../partials/manageStudents.ejs') %>
                </div>
            </div>
        <% } else { %>
            <div class="text-center mt-5">
                <h2>No School Year Selected</h2>
            </div>
        <% } %>
    </div>
</body>
</html>